@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Giriş Sayfası</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label >Başlık</label>
                    <input type="text" class="form-control" asp-for="Title"  placeholder="başlık">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="textarea" class="form-control" asp-for="Description" colls="30" rows="4"></input>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

