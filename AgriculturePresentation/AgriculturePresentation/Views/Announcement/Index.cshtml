@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Haber Sayfası</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn-outline-success">Düzenle</a></td>
                                @if (item.Status == true)
                                {
                                    <td><a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn-outline-warning">Pasif Yap</a></td>

                                }
                                @if(item.Status == false)
                                {
                                <td><a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn-outline-secondary">Aktif Yap</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>

