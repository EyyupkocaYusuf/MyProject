@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Görsel Girişi</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x=>x.ImageId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputEmail3" placeholder="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></input>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

