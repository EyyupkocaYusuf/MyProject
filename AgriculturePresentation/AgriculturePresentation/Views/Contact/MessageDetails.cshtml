@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay Sayfası</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x=>x.ContactId)
                <div class="form-group">
                    <label for="exampleInputName1">Ad-Soyad</label>
                    <input type="text" class="form-control" asp-for="Name" id="exampleInputName1" >
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Mail</label>
                    <input type="text" class="form-control" asp-for="Mail" id="exampleInputEmail3" >
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    <input type="text" class="form-control" asp-for="Date" id="exampleTextarea1" ></input>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                </div> 
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>



