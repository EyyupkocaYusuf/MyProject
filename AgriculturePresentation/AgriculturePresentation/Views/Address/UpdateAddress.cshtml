                    <label for="exampleInputName1">Açıklama1</label>
                    <input type="text" class="form-control" asp-for="Description1" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama2</label>
                    <input type="text" class="form-control" asp-for="Description2" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description3" id="exampleTextarea1" rows="4"></input>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama4</label>
                    <input type="text" class="form-control" asp-for="Description4" id="exampleTextarea1" rows="4"></input>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

